<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/windows_bg"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="@dimen/space_10"
        android:background="@null"
        android:hint="请输入标题"
        android:singleLine="true"
        android:textColor="#333"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/space_8"
        android:background="?attr/layout_item_bg" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@null"
        android:gravity="top|left"
        android:hint="写点什么吧。。。"
        android:textColor="#666"
        android:padding="@dimen/space_12"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/space_8"
        android:background="?attr/layout_item_bg" />

    <GridView
        android:id="@+id/images_gridview"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:numColumns="4"
        android:layout_height="wrap_content"
        android:verticalSpacing="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_10"
        android:horizontalSpacing="@dimen/space_10"
        ></GridView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?attr/layout_item_bg"/>

    <Spinner
        android:id="@+id/submit_spinner"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView><!-- From: file:/C:/Users/ThinkPad/Desktop/android-app_2_1/app/src/main/res/layout/technical_send_post_frag.xml -->